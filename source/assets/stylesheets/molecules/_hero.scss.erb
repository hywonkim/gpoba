/* ==========================================================================
//  Hero modules
// ========================================================================== */

@import "../core/*";
@import "../atoms/logo";
@import "../atoms/button";
@import "../atoms/heading";
@import "../molecules/main_nav";

$hero-pointer-h: 37px;

/* Base
// -------------------------------------------------------------------------- */

.hero {
    position: relative;
    width: 100%;
    height: 600px;
    height: 100vh;
    text-align: center;
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    background-color: #ccc;
}

/* Submodules
// -------------------------------------------------------------------------- */

.hero-logo {
    @include rem(max-width, 120px);
    @include rem(padding, 16px);
    display: inline-block;
    background-color: theme(bg);
}

.hero-headline {
    @extend %alpha;
    display: block;
    position: relative;
    top: 40%;
    margin: 0 auto;
    padding-left: $gutter-outside;
    padding-right: $gutter-outside;
    text-align: center;

    .csstransforms & {
        position: absolute;
        width: 100%;
        top: auto;
        bottom: 25%;
        left: 50%;
        margin-top: 0;
        transform: translateX(-50%);
    }
}

    .hero-title {
        @extend %font-display--bold;
        @include border(bottom);
        @include rem(font-size, fs(5));
        padding-bottom: 0.5em;
        text-transform: uppercase;
    }

    .hero-date {
        @extend %font-accent;
        display: block;
        font-size: fs(9);
        font-size: 30vw;
        line-height: 1;
        letter-spacing: -0.06em;
        color: theme(bg);

        @include breakpoint(600px) {
            font-size: fs(11);
            font-size: 23vw;
        }
        @include breakpoint(850px) {
            font-size: fs(12);
            font-size: 16vw;
        }
    }

.hero-lockup {
    @extend .hero-headline;
    @include rem(max-width, 400px);
}

.hero-nav {
    @extend .main_nav;
    @include border(bottom);
    display: none;
    position: absolute;
    bottom: 0; //$hero-pointer-h;
    width: 100%;
    border: none;
    background-color: theme(bg, reverse);

    @include breakpoint(900px) {
        display: block;
    }
}

.hero-button {
    $c: theme(text primary, reverse);
    @extend .button;
    position: absolute;
    top: ($gutter * 0.75);
    left: $gutter;
    border-color: $c;
    color: $c;

    &:hover, &:active {
        // color: theme(bg, reverse);
        background-color: $c;
    }

    &.right {
        left: auto;
        right: $gutter;
    }
}

.hero-pointer {
    // @include border(top)
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: $hero-pointer-h;
    background-color: darken(theme('bg', 'reverse'), 5);
}
