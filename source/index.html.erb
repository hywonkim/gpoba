---
title: home
---

<header class="hero" style="background-image: url('<%= asset_url(data.site.paths.content + 'home/' + data.site.cover_image.to_s) %>');">

    <!-- GPOBA logo -->
    <%= partial("layouts/partials/logo-gpoba", :locals => { :classes => "hero-logo" }) %>

    <!-- main title lockup -->
    <%= partial "layouts/partials/hero-lockup" %>

    <!-- main menu -->
    <%= partial("layouts/partials/nav-main", :locals => { :classes => "hero-nav", :show_home => true }) %>
</header>

<article class="chapter" role="main">

    <!-- Executive summary -->
    <div class="l-wrapper narrow chapter-content">
        <% sitemap.where(:chapter => "home", :type => "introduction").order_by(:order).all.each do |summary| %>
            <h1 class="chapter-title"><%= summary.data.title %></h1>
            <%= summary.render %>
        <% end %>
    </div>

    <!-- Leadership messages -->
    <aside class="chapter-aside">
        <h1 class="slug">Messages from our leadership</h1>
        <div class="l-wrapper">
            <ul class="gallery">
                <li class="gallery-item card horizontal small">
                    <a href="#" class="card-thumb">
                        <img src="<%= lorem.image '400x400' %>" />
                    </a>
                    <div class="card-content">
                        <h2 class="card-title">Ted Hypothetical</h2>
                        <span>Senior Director</span>
                    </div>
                </li>
                <li class="gallery-item card horizontal small">
                    <a href="#" class="card-thumb">
                        <img src="<%= lorem.image '400x400' %>" />
                    </a>
                    <div class="card-content">
                        <h2 class="card-title">Susan Example</h2>
                        <span>Program Manager</span>
                    </div>
                </li>
                <li class="gallery-item card horizontal small">
                    <a href="#" class="card-thumb">
                        <img src="<%= lorem.image '400x400' %>" />
                    </a>
                    <div class="card-content">
                        <h2 class="card-title">Mark Case</h2>
                        <span>Senior Director</span>
                    </div>
                </li>
            </ul>
        </div>
    </aside>
</article>

<!-- Donors -->
<section class="billboard">
    <div class="billboard-frame">
        <% sitemap.where(:chapter => "home", :type => "billboard").order_by(:order).all.each do |billboard| %>
            <h1 class="billboard-title"><%= billboard.data.title %></h1>
            <%= billboard.render %>
        <% end %>
    </div>
</section>

<!-- Section cards -->
<section class="panel">
    <h1 class="panel-slug">Sections</h1>
    <ul class="feed l-wrapper narrow">
        <% data.chapters.each do |chapter| %>
            <li class="feed-item card horizontal">
                <a href="<%= data.site.paths.chapter %><%= chapter.slug.urlize %>" class="card-thumb">
                    <img src="<%= lorem.image '600x400' %>" />
                </a>
                <div class="card-content">
                    <h2 class="card-title"><a href="<%= data.site.paths.chapter %><%= chapter.slug.urlize %>"><%= chapter.title %></a></h2>
                    <p><%= lorem.sentences 3 %>.</p>
                    <a href="<%= data.site.paths.chapter %><%= chapter.slug.urlize %>" class="read_more">Read More &rsaquo;</a>
                </div>
            </li>
        <% end %>
    </ul>
</section>
