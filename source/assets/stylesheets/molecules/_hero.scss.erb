.hero-button {
    $c: theme(text primary, reverse);
    @extend .button;
    @include font-scale(1);
    position: absolute;
    top: ($gutter/3);
    left: ($gutter/3);
    padding: 0.4em 1em 0.35em;
    border-color: $c;
    color: $c;

    &:hover, &:active {
        // color: theme(bg, reverse);
        background-color: $c;
    }

    &.right {
        left: auto;
        right: ($gutter/3);
    }


    @include breakpoint(530px) {
        @include font-scale(2);
        top: ($gutter * 0.75);
        left: $gutter;
        padding: 0.6em 1.8em 0.5em;

        &.right { right: $gutter; }
    }
}

.hero-headline {
    @extend %alpha;
    display: block;
    position: absolute;
    bottom: 26%;
    margin: 0 auto;
    padding-left: $gutter-outside;
    padding-right: $gutter-outside;
    text-align: center;
}

    .hero-title {
        @extend %font-display--bold;
        @include border(bottom);
        @include rem(font-size, fs(5));
        padding-bottom: 0.5em;
        text-transform: uppercase;
    }

    .hero-date {
        @extend %font-accent;
        display: block;
        font-size: fs(9);
        font-size: 30vw;
        line-height: 1;
        letter-spacing: -0.06em;
        color: theme(bg);

        @include breakpoint(600px) {
            font-size: fs(11);
            font-size: 23vw;
        }
        @include breakpoint(850px) {
            font-size: fs(12);
            font-size: 16vw;
        }
    }

.hero-lockup {
    @extend .hero-headline;
    @include rem(max-width, 400px);
    @include rem(max-height, 230px);
    width: 100%;

    .csstransforms & {
        @include transform(translateX(-50%));
        position: absolute;
        left: 50%;
        margin-top: 0;
        // transform: translateX(-50%);
    }

    @include respond-to('medium') {
        // for IE
        @include rem(min-height, 200px);

        svg { height: 220px; }
    }
}

.hero-nav {
    @extend .nav;
    display: block;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    padding: 0 $gutter-outside;
    border: none;
    text-align: left;
    background-color: theme(bg, reverse);

    @include respond-to($hero-nav-break) {
        position: absolute;
        padding: 0;
        text-align: center;
    }
}

    // the full nav
    // -> a flyout on small screens, horizontal/persistent on large screens
    .hero-toc {
        @extend .nav-toc;
        bottom: 70px;
        right: ($gutter - 10px);

        @include respond-to($hero-nav-break) {
            display: block;
            position: relative;
            left: 0;
            bottom: $hero-pointer-h;
        }
    }

    // the contents button in the nav
    .hero-flyout {
        @extend .nav-flyout;
        display: inline-block;
        vertical-align: middle;
        float: right;

        @include respond-to($hero-nav-break) {
            display: none;
        }
    }

    // anchor link pointing to the first bit of content ("year in review")
    .hero-pointer {
        @extend %font-accent;
        @extend %base-transition;
        @include font-scale(2);

        display: inline-block;
        vertical-align: middle;
        padding: 0.5em 0;
        float: left;
        line-height: $hero-pointer-h;
        color: theme(text tertiary, reverse);

        &:hover, &:active {
            color: theme(text primary, reverse);
            border: none;
        }

        &.is-hidden {
            display: none;

            @include respond-to($hero-nav-break) {
                display: block;
            }
        }

        @include respond-to($hero-nav-break) {
            display: block;
            position: relative;
            padding: 0;
            width: 100%;
            height: $hero-pointer-h;
            float: none;
            text-align: center;
            background-color: darken(theme('bg', 'reverse'), 5);

            &:hover, &:active { background-color: theme(highlight); }
        }
    }

        // icon in the pointer link
        .hero-pointer-icon {
            $h: 1em;
            @extend .icon;
            height: $h;
            fill: theme(text primary, reverse);
            display: inline-block;
            vertical-align: middle;
        }
