/* ==========================================================================
//  Map Module
// ========================================================================== */

/* assign the correct fill color to each highlighted country
 * -> see data/map.yml
 */
<% data.map.each do |g|  %>
    <%= g.group.countries.map{ |c| "#" + c }.join(',') %> {
        fill: theme(<%= g.group.type %>, map);
    }
    
    .legend-element.<%= g.group.type %> {
        fill: theme(<%= g.group.type %>, map);
    }

<% end %>

.map {
    height: 700px;
    width: 1000px;
    fill: rgb(219, 217, 218);
}

.legend {
    display: block;
    bottom: 50px;
    left: 5px;
    position: absolute;

    .sub-text {
        fill: theme(body, reverse);
        text-transform: uppercase;    
    }
}