$hero-pointer-h: fs(7);
// pull in main nav breakpoint and use it here
$hero-nav-break: $nav-break;

/* Base
// -------------------------------------------------------------------------- */

.hero {
    position: relative;
    width: 100%;
    height: 600px;
    height: 100vh;
    text-align: center;
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    background-color: theme(bg, reverse);
}

