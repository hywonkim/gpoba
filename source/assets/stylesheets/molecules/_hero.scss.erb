.hero-headline {
    @extend %alpha;
    display: block;
    position: absolute;
    bottom: 26%;
    margin: 0 auto;
    padding-left: $gutter-outside;
    padding-right: $gutter-outside;
    text-align: center;
}

    .hero-title {
        @extend %font-display--bold;
        @include border(bottom);
        @include rem(font-size, fs(5));
        padding-bottom: 0.5em;
        text-transform: uppercase;
    }

    .hero-date {
        @extend %font-accent;
        display: block;
        font-size: fs(9);
        font-size: 30vw;
        line-height: 1;
        letter-spacing: -0.06em;
        color: theme(bg);

        @include breakpoint(600px) {
            font-size: fs(11);
            font-size: 23vw;
        }
        @include breakpoint(850px) {
            font-size: fs(12);
            font-size: 16vw;
        }
    }

.hero-lockup {
    @extend .hero-headline;
    @include rem(max-width, 400px);
    @include rem(max-height, 230px);
    width: 100%;

    .csstransforms & {
        @include transform(translateX(-50%));
        position: absolute;
        left: 50%;
        margin-top: 0;
        // transform: translateX(-50%);
    }

    @include respond-to('medium') {
        // for IE
        @include rem(min-height, 200px);

        svg { height: 220px; }
    }
}

.hero-nav {
    @extend .main_nav;
    @include border(bottom);
    display: block;
    position: absolute;
    bottom: $hero-pointer-h;
    width: 100%;
    border: none;
    background-color: theme(bg, reverse);

    @include respond-to($hero-nav-break) {
        display: block;
    }
}

.hero-button {
    $c: theme(text primary, reverse);
    @extend .button;
    @include font-scale(1);
    position: absolute;
    top: ($gutter/3);
    left: ($gutter/3);
    padding: 0.4em 1em 0.35em;
    border-color: $c;
    color: $c;

    &:hover, &:active {
        // color: theme(bg, reverse);
        background-color: $c;
    }

    &.right {
        left: auto;
        right: ($gutter/3);
    }


    @include breakpoint(530px) {
        @include font-scale(2);
        top: ($gutter * 0.75);
        left: $gutter;
        padding: 0.6em 1.8em 0.5em;

        &.right { right: $gutter; }
    }
}

.hero-pointer {
    @extend %font-accent;
    @extend %base-transition;
    @include font-scale(2);
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: $hero-pointer-h;
    text-align: center;
    line-height: $hero-pointer-h;
    color: theme(text tertiary, reverse);
    background-color: darken(theme('bg', 'reverse'), 5);

    &:hover, &:active {
        color: theme(text primary, reverse);
        background-color: theme(highlight);
        border: none;
    }
}

    .hero-pointer-icon {
        $h: 1em;
        @extend .icon;
        height: $h;
        fill: theme(text primary, reverse);
        display: inline-block;
        vertical-align: middle;
    }
